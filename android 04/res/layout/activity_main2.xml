<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main2Activity">

    <TabHost
        android:id="@+id/musical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#E91E63"
                android:gravity="center"
                android:text="뮤지컬"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="567dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"

                >

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!--뮤지컬별 내용 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="184dp"
                        android:orientation="horizontal">

                        <!--이미지-->

                        <ImageView
                            android:id="@+id/img"
                            android:layout_width="180dp"
                            android:layout_height="180dp">

                        </ImageView>

                        <!--공연정보-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="뮤지컬제목"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/theater"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="공연장" />

                            <TextView
                                android:id="@+id/date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="공연날짜" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line1"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/darker_gray"
                        android:orientation="vertical" />
                    <!--뮤지컬별 내용 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="184dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <!--이미지-->

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="180dp"
                            android:layout_height="180dp">

                        </ImageView>

                        <!--공연정보-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/title1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="뮤지컬제목"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/theater1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="공연장" />

                            <TextView
                                android:id="@+id/date1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="공연날짜" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line2"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/darker_gray"
                        android:orientation="vertical" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!--뮤지컬별 내용 -->
                    <LinearLayout
                        android:id="@+id/m2"
                        android:layout_width="match_parent"
                        android:layout_height="184dp"
                        android:orientation="horizontal">

                        <!--이미지-->

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="180dp"
                            android:layout_height="180dp">

                        </ImageView>

                        <!--공연정보-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/title2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="뮤지컬제목"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/theater2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="공연장" />

                            <TextView
                                android:id="@+id/date2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="공연날짜" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/darker_gray"
                        android:orientation="vertical" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!--뮤지컬별 내용 -->
                    <LinearLayout
                        android:id="@+id/m3"
                        android:layout_width="match_parent"
                        android:layout_height="184dp"
                        android:orientation="horizontal">

                        <!--이미지-->

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="180dp"
                            android:layout_height="180dp">

                        </ImageView>

                        <!--공연정보-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/title3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="뮤지컬제목"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/theater3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="공연장" />

                            <TextView
                                android:id="@+id/date3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="공연날짜" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/darker_gray"
                        android:orientation="vertical" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>